# å®‰è£…ä¸»è„šæœ¬
install_script() {
    echo -e "${YELLOW}æ­£åœ¨å®‰è£…ï¼šå°†è„šæœ¬å®‰è£…åˆ° $INSTALL_DIR...${NC}"
    
    if [ ! -d "$INSTALL_DIR" ]; then
        mkdir -p "$INSTALL_DIR"
    fi
    
    cp "$SCRIPT_PATH" "$INSTALL_DIR"
    chmod +x "$INSTALL_DIR/$(basename "$SCRIPT_PATH")"
    
    echo -e "${GREEN}è„šæœ¬å·²å®‰è£…åˆ° $INSTALL_DIRã€‚${NC}"
}

# ä¿®æ”¹ç™»å½•ç«¯å£çš„å‡½æ•°
change_ssh_port() {
    local current_port
    local new_port
    local user

    user=$(whoami)
    current_port=$(grep -E "^Port " /etc/ssh/sshd_config | awk '{print $2}' || echo "22")

    echo -e "${YELLOW}å½“å‰ SSH ç™»å½•ç«¯å£æ˜¯: $current_port${NC}"
    read -p "è¯·è¾“å…¥æ–°çš„ SSH ç™»å½•ç«¯å£å· (æ¨è > 1024): " new_port

    # æ£€æŸ¥è¾“å…¥çš„ç«¯å£å·æ˜¯å¦æœ‰æ•ˆ
    if ! [[ "$new_port" =~ ^[0-9]+$ ]] || [ "$new_port" -le 1024 ] || [ "$new_port" -ge 65535 ]; then
        echo -e "${RED}æ— æ•ˆçš„ç«¯å£å·ï¼Œè¯·è¾“å…¥ä¸€ä¸ªæœ‰æ•ˆçš„ç«¯å£å·ï¼ˆå¤§äº 1024 ä¸”å°äº 65535ï¼‰ã€‚${NC}"
        return
    fi

    # ä¿®æ”¹ sshd_config æ–‡ä»¶
    sed -i "s/^Port .*/Port $new_port/" /etc/ssh/sshd_config

    # èµ‹äºˆæƒé™
    chmod 600 /etc/ssh/sshd_config
    echo -e "${GREEN}SSH ç™»å½•ç«¯å£å·²ä¿®æ”¹ä¸º $new_portã€‚${NC}"

    # ç¦ç”¨åŸæ¥çš„ 22 ç«¯å£
    if [ "$current_port" != "22" ]; then
        ufw deny 22
        echo -e "${GREEN}å·²ç¦ç”¨ 22 ç«¯å£ã€‚${NC}"
    fi

    # è¯†åˆ«å¹¶å…è®¸æ–°ç«¯å£
    if command -v ufw &> /dev/null; then
        ufw allow "$new_port"
        echo -e "${GREEN}å·²æ”¾è¡Œæ–°ç«¯å£ $new_portã€‚${NC}"
    fi

    # é‡å¯ SSH æœåŠ¡
    systemctl restart sshd
    echo -e "${GREEN}SSH æœåŠ¡å·²é‡å¯ï¼Œæ–°çš„ç«¯å£è®¾ç½®ç”Ÿæ•ˆã€‚${NC}"

    # æç¤ºç”¨æˆ·æŒ‰ä»»æ„é”®è¿”å›ä¸»èœå•
    read -p "æŒ‰ä»»æ„é”®è¿”å›ä¸»èœå•..."
}

