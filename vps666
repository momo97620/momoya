    LIGHTCYAN='\033[1;36m'  # 明亮的青色
    NC='\033[0m'  # 重置颜色

    # ASCII 艺术展示 "EMoMoMo"
    echo -e "${LIGHTCYAN}"
    echo "  ███████╗███╗   ███╗ ██████╗ ███╗   ███╗ ██████╗ ███╗   ███╗ ██████╗"
    echo "  ██╔════╝████╗ ████║██╔═══██╗████╗ ████║██╔═══██╗████╗ ████║██╔═══██╗"
