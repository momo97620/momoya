# å®‰è£…ä¸»è„šæœ¬
install_script() {
    echo -e "${YELLOW}æ­£åœ¨å®‰è£…ï¼šå°†è„šæœ¬å®‰è£…åˆ° $INSTALL_DIR...${NC}"
    
    if [ ! -d "$INSTALL_DIR" ]; then
        mkdir -p "$INSTALL_DIR"
    fi
    
    cp "$SCRIPT_PATH" "$INSTALL_DIR"
    chmod +x "$INSTALL_DIR/$(basename "$SCRIPT_PATH")"
    
    echo -e "${GREEN}è„šæœ¬å·²å®‰è£…åˆ° $INSTALL_DIRã€‚${NC}"
}

# é…ç½®å¯†é’¥ç™»å½•çš„å‡½æ•°
configure_key_login() {
    local user="$1"
    local ssh_dir="/home/$user/.ssh"
    local authorized_keys="$ssh_dir/authorized_keys"

    # æ£€æŸ¥ç”¨æˆ·æ˜¯å¦å­˜åœ¨
    if id "$user" &>/dev/null; then
        echo "ä¸ºç”¨æˆ· $user é…ç½®å¯†é’¥ç™»å½•..."

        # åˆ›å»º .ssh ç›®å½•ï¼ˆå¦‚æœä¸å­˜åœ¨ï¼‰
        mkdir -p "$ssh_dir"
        chmod 700 "$ssh_dir"

        # ç”Ÿæˆ SSH å¯†é’¥å¯¹ï¼ˆå¦‚æœä¸å­˜åœ¨ï¼‰
        if [ ! -f "$ssh_dir/id_rsa" ]; then
            ssh-keygen -t rsa -b 2048 -f "$ssh_dir/id_rsa" -N ""
            echo "SSH å¯†é’¥å¯¹å·²ç”Ÿæˆã€‚"
        else
            echo "SSH å¯†é’¥å¯¹å·²å­˜åœ¨ã€‚"
        fi

        # å°†å…¬é’¥å¤åˆ¶åˆ° authorized_keys
        cat "$ssh_dir/id_rsa.pub" >> "$authorized_keys"
        chmod 600 "$authorized_keys"
        echo "å…¬é’¥å·²æ·»åŠ åˆ° authorized_keysã€‚"

        # ä¿®æ”¹ SSH é…ç½®ä»¥ç¦ç”¨å¯†ç ç™»å½•
        sed -i '/^PasswordAuthentication/s/yes/no/' /etc/ssh/sshd_config
        sed -i '/^ChallengeResponseAuthentication/s/yes/no/' /etc/ssh/sshd_config

        # é‡å¯ SSH æœåŠ¡
        echo "é‡å¯ SSH æœåŠ¡ä»¥åº”ç”¨æ›´æ”¹..."
        systemctl restart sshd
        echo "å¯†é’¥ç™»å½•é…ç½®å®Œæˆï¼Œå¯†ç ç™»å½•å·²ç¦ç”¨ã€‚"
    else
        echo "ç”¨æˆ· $user ä¸å­˜åœ¨ï¼Œè¯·å…ˆåˆ›å»ºç”¨æˆ·ã€‚"
    fi
}

