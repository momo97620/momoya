        clear
        # ASCII 艺术展示 "emoMomo"
        echo -e "${LIGHTCYAN}"
        echo "  ______ _   __  __   __  __          "
        echo " |  ____| | |  \/  | |  \/  |         "
        echo " | |__  | | | \  / | | \  / | ___ _ __ "
        echo " |  __| | | |\/| | | |\/| |/ _ \ '__|"
        echo " | |    | | | |  | | | |  | |  __/ |   "
        echo " |_|    |_| |_|  |_| |_|  |_|\___|_|   "
        echo -e "${NC}"

        echo -e "${LIGHTCYAN}============================= VPS 脚本菜单 =============================${NC}"
