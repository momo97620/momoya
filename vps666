# ä¸»æ‰§è¡Œé€»è¾‘
main() {
    if [[ "$1" == "install" ]]; then
        install_script
        exit 0
    fi

    echo -e "${YELLOW}è„šæœ¬è·¯å¾„: $SCRIPT_PATH${NC}"
    echo -e "${YELLOW}å®‰è£…è·¯å¾„: $INSTALL_DIR${NC}"

    if [ ! -d "$INSTALL_DIR" ]; then
        install_script
    else
        echo -e "${GREEN}è„šæœ¬å·²å®‰è£…åˆ°ï¼š$INSTALL_DIR${NC}"
    fi

    show_main_menu
}

# æ‰§è¡Œä¸»é€»è¾‘
main "$@"