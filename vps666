# 默认密钥名称
KEY_NAME="id_rsa"

# 打印帮助信息
print_usage() {
    echo -e "\033[1;32m用法: $0 [选项]\033[0m"
    echo -e "\033[1;32m选项:\033[0m"
    echo -e "  -k, --key-name <name>   指定 SSH 密钥名称（默认：id_rsa）"
    echo -e "  -h, --help              显示帮助信息"
}

# 检查是否以 root 权限运行
if [[ $EUID -ne 0 ]]; then
   echo -e "\033[0;31m[错误] 请以 root 权限运行此脚本。\033[0m"
   exit 1
fi

# 解析命令行参数
while [[ $# -gt 0 ]]; do
    case "$1" in
        -k|--key-name)
            KEY_NAME="$2"
            shift 2
            ;;
        -h|--help)
            print_usage
            exit 0
            ;;
        *)
            echo -e "\033[0;31m[错误] 无效的选项: $1\033[0m"
            print_usage
            exit 1
            ;;
    esac
done

# 自动获取当前用户名
USERNAME=$(whoami)

# 设置变量
SSH_DIR="/home/$USERNAME/.ssh"
AUTHORIZED_KEYS="$SSH_DIR/authorized_keys"
SSHD_CONFIG="/etc/ssh/sshd_config"

# 打印界面信息
print_banner() {
    echo -e "\033[1;32m=======================================\033[0m"
    echo -e "\033[1;32m       SSH 密钥登录配置脚本         \033[0m"
    echo -e "\033[1;32m=======================================\033[0m"
}

# 创建 SSH 密钥对
generate_ssh_keys() {
    echo -e "\033[1;34m正在生成 SSH 密钥对...\033[0m"
    mkdir -p "$SSH_DIR"
    chmod 700 "$SSH_DIR"

    if [[ -f "$SSH_DIR/$KEY_NAME" ]]; then
        echo -e "\033[1;33m密钥已存在：$SSH_DIR/$KEY_NAME\033[0m"
    else
        ssh-keygen -t rsa -b 2048 -f "$SSH_DIR/$KEY_NAME" -N ""  # 使用 2048 位密钥
        if [[ $? -ne 0 ]]; then
            echo -e "\033[0;31m[错误] 密钥生成失败。\033[0m"
            exit 1
        fi
        echo -e "\033[1;32m密钥生成完成：\033[0m"
        echo -e "\033[1;34m私钥路径：$SSH_DIR/$KEY_NAME\033[0m"
        echo -e "\033[1;34m公钥路径：$SSH_DIR/$KEY_NAME.pub\033[0m"
    fi
}

# 配置公钥登录
setup_ssh_key_login() {
    echo -e "\033[1;34m正在配置公钥登录...\033[0m"
    cat "$SSH_DIR/$KEY_NAME.pub" >> "$AUTHORIZED_KEYS"
    chmod 600 "$AUTHORIZED_KEYS"
    echo -e "\033[1;32m公钥已添加到 $AUTHORIZED_KEYS\033[0m"
}

# 禁用密码登录
disable_password_login() {
    echo -e "\033[1;34m正在禁用密码登录...\033[0m"

    # 确保配置文件中没有被注释的行
    sed -i.bak -E 's/^#?PasswordAuthentication\s+.*/PasswordAuthentication no/' "$SSHD_CONFIG"
    sed -i.bak -E 's/^#?PermitRootLogin\s+.*/PermitRootLogin prohibit-password/' "$SSHD_CONFIG"

    # 如果配置文件中没有这些行，直接添加
    if ! grep -q "^PasswordAuthentication" "$SSHD_CONFIG"; then
        echo "PasswordAuthentication no" >> "$SSHD_CONFIG"
    fi
    if ! grep -q "^PermitRootLogin" "$SSHD_CONFIG"; then
        echo "PermitRootLogin prohibit-password" >> "$SSHD_CONFIG"
    fi

    echo -e "\033[1;32m已禁用密码登录。\033[0m"
}

# 显示私钥信息
show_private_key() {
    echo -e "\033[1;34m请妥善保存以下私钥内容用于登录 VPS：\033[0m"
    echo -e "\033[1;32m-------------------------------------\033[0m"
    cat "$SSH_DIR/$KEY_NAME"
    echo -e "\033[1;32m-------------------------------------\033[0m"
}

# 设置脚本自身执行权限
set_self_permission() {
    SCRIPT_PATH=$(realpath "$0")
    chmod +x "$SCRIPT_PATH"
    echo -e "\033[1;32m脚本自身已赋予执行权限：$SCRIPT_PATH\033[0m"
}

# 等待用户确认
wait_for_user() {
    echo -e "\033[1;33m按任意键继续...\033[0m"
    read -n 1 -s  # 等待用户按任意键
}

# 主脚本逻辑
main() {
    print_banner
    generate_ssh_keys
    setup_ssh_key_login
    disable_password_login
    restart_ssh_service
    show_private_key
    set_self_permission
    wait_for_user
    echo -e "\033[1;32m配置完成！\033[0m"
}

# 执行主逻辑
main
# 主执行逻辑
main() {
    if [[ "$1" == "install" ]]; then
        install_script
        exit 0
    fi

    echo -e "${YELLOW}脚本路径: $SCRIPT_PATH${NC}"
    echo -e "${YELLOW}安装路径: $INSTALL_DIR${NC}"

    if [ ! -d "$INSTALL_DIR" ]; then
        install_script
    else
        echo -e "${GREEN}脚本已安装到：$INSTALL_DIR${NC}"
    fi

    show_main_menu
}

# 执行主逻辑
main "$@"