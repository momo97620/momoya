        printf "${GREEN}%-3s %-30s${NC}\n" "10." "设IPv4/6优先级"
        printf "${GREEN}%-3s %-30s${NC}\n" "11." "更新脚本"
        printf "${GREEN}%-3s %-30s${NC}\n" "12." "保持ssh链接"
