main() {
    if [[ "$1" == "install" ]]; then
        install_script
        exit 0
    fi

    if [ ! -d "$INSTALL_DIR" ]; then
        install_script
    else
        echo -e "${GREEN}è„šæœ¬å·²å®‰è£…åˆ°ï¼š$INSTALL_DIR${NC}"
    fi

    # è°ƒç”¨ä¸»èœå•
    while true; do
        show_main_menu
    done
}

# æ‰§è¡Œä¸»é€»è¾‘
main "$@"