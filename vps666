setup_nextchat() {
    # è®¾ç½®å·¥ä½œç›®å½•
    local work="/docker/nextchat"
    mkdir -p "$work" && cd "$work" || { echo "æ— æ³•è¿›å…¥å·¥ä½œç›®å½•"; exit 1; }

    # åˆ›å»º docker-compose.yml æ–‡ä»¶å¹¶å†™å…¥åŸºç¡€é…ç½®
    cat <<EOL > docker-compose.yml
